<?xml version="1.0" encoding="utf-8"?>
<project>
	
	<meta title="TestApp" package="com.sample.testapp" version="1.0.0" company="Company Name" />
	<app main="Main" path="build" file="TestApp" />
	<window width="318" height="470"/>
	
	<source path="src" rename="Source" />
	
	<haxelib name="openfl" />
	<haxelib name="bytepack" />
	
	<assets path="assets/.bytepack" rename="assets" unless="noencrypt" />
