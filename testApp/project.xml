<?xml version="1.0" encoding="utf-8"?>
<project>
	
	<meta title="TestApp" package="com.zeroip.testapp" version="1.0.0" company="ZeroIP" />
	<app main="Main" path="build" file="TestApp" />
	<window width="318" height="470"/>
	
	<source path="src" />
	
	<haxelib name="openfl" />
	<haxelib name="bytepack" />

	<section unless="noencrypt">
		<postbuild cmd="cp -a -f assets/.bytepack/. ${app.path}/linux/bin/assets/" if="${project.target == linux}" />
		<postbuild cmd="xcopy /y /q /i assets\.bytepack\* ${app.path}\windows\bin\assets\" if="${project.target == windows}" />
	</section>
	<assets path="assets" exclude=".bytepack" if="noencrypt" />
	
</project>